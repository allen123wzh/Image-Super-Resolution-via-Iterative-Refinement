{
    "name": "ll_ffhq_256_g1_1.2",
    "phase": "train", // train or val
    "gpu_ids": [0,1,2,3],
    "path": { //set the path
        "log": "logs",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoint",
        //"resume_state": null
        "resume_state": "I60000_E48" //pretrain model or training state
    },
    "datasets": {
        "train": {
            "name": "FFHQ",
            "mode": "HR", // whether need LR img
            "dataroot": "dataset/dark/ffhq_256_256_gamma_1_1.2",
            "datatype": "img", //lmdb or img, path of img files
            "l_resolution": 256, // low resolution need to super_resolution
            "r_resolution": 256, // high resolution
            "batch_size": 56,
            "num_workers": 8,

            "use_shuffle": true,
            "data_len": -1 // -1 represents all data used in train
        },
        "val": {
            "name": "CelebaHQ",
            "mode": "LRHR",
            "dataroot": "dataset/dark/celebahq_256_256_gamma_1_1.2",
            "datatype": "img", //lmdb or img, path of img files
            "l_resolution": 256,
            "r_resolution": 256,
            "data_len": 50
        }
    },
    "model": {
        "which_model_G": "sr3", // use the ddpm or sr3 network structure
        "finetune_norm": false,
        "unet": {
            "in_channel": 6,
            "out_channel": 3,
            "inner_channel": 64,
            "norm_groups": 16,
            "channel_multiplier": [
                1,
                2,
                4,
                8,
                // 8,
                // 16,
                16
            ],
            "attn_res": [
                16
            ],
            "res_blocks": 1,
            "dropout": 0
        },
        "beta_schedule": { // use manual beta_schedule for acceleration
            "train": {
                "schedule": "cosine",
                "n_timestep": 1000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            },
            "val": {
                "schedule": "cosine",
                "n_timestep": 1000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            }
        },
        "diffusion": {
            "image_size": 256,
            "channels": 3, //sample channel
            "conditional": true // unconditional generation or unconditional generation(super_resolution)
        }
    },
    "train": {
        "n_iter": 1000000,
        "val_freq": 2500,
        "save_checkpoint_freq": 2500,
        "print_freq": 250,
        "optimizer": {
            "type": "adam",
            "lr": 1e-5
        },
        "ema_scheduler": { // not used now
            "step_start_ema": 5000,
            "update_ema_every": 1,
            "ema_decay": 0.9999
        }
    },
    "wandb": {
        "project": "distributed_high_sr_ffhq"
    }
}